Name "NorduGrid ARC"
OutFile "nordugrid-arc-@VERSION@-1.exe"
InstallDir "$PROGRAMFILES\NorduGridArc"
InstallDirRegKey HKLM SOFTWARE\NorduGridArc "Install_Dir"
ShowInstDetails hide
ShowUninstDetails hide
XPStyle on

