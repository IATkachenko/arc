  <wsdl:portType name="charon">
    <wsdl:operation name="AuthZ">
      <wsdl:input name="AuthzRequestMessage"
        message="charon:AuthzRequestMessage"/>
      <wsdl:output name="AuthzResponseMessage"
        message="charon:AuthzResponseMessage"/>
    </wsdl:operation>
  </wsdl:portType>

  <wsdl:binding name="charon" type="charon:charon">
    <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
    <wsdl:operation name="AuthZ">
      <soap:operation soapAction="AuthZ"/>
      <wsdl:input name="AuthzRequestMessage">
        <soap:body use="literal"/>
      </wsdl:input>
      <wsdl:output name="AuthzResponseMessage">
        <soap:body use="literal"/>
      </wsdl:output>
    </wsdl:operation>
  </wsdl:binding>

  <wsdl:service name="charon">
    <wsdl:port name="charon" binding="charon:charon">
      <soap:address location="http://localhost:80"/>
    </wsdl:port>
  </wsdl:service>
</wsdl:definitions>
