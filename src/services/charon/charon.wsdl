 xmlns:charon="http://www.nordugrid.org/schemas/charon">

  <wsdl:types>
    <xsd:schema targetNamespace="http://www.nordugrid.org/schemas/charon">

      <xsd:import namespace="http://www.nordugrid.org/schemas/request-arc/" location="./../hed/shc/arcpdp/Request.xsd"/>
      <xsd:import namespace="http://www.nordugrid.org/schemas/response-arc/" location="./../hed/shc/arcpdp/Response.xsd"/>
      <xsd:complexType name="GetPolicyDecisionRequestType">
        <xsd:sequence>
          <xsd:element name="Request" type="request-arc:Request" minOccurs="1" maxOccurs="1"/>
        </xsd:sequence>
      </xsd:complexType>
      <xsd:element name="GetPolicyDecisionRequest" type="charon:GetPolicyDecisionRequestType"/>
		
      <xsd:complexType name="GetPolicyDecisionResponseType">
        <xsd:sequence>
          <xsd:element name="Response" type="response-arc:Response" minOccurs="1" maxOccurs="1"/>
        </xsd:sequence>
      </xsd:complexType>
      <xsd:element name="GetPolicyDecisionResponse" type="charon:GetPolicyDecisionResponseType"/>
		
    </xsd:schema>
  </wsdl:types>

  <wsdl:message name="AuthzRequestMessage">
    <wsdl:part name="GetPolicyDecisionRequest" element="charon:GetPolicyDecisionRequest"/>
    <wsdl:part name="XACMLPolicyDecisionRequest" element="xacml-samlp:XACMLAuthzDecisionQuery"/>
