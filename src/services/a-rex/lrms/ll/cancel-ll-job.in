#!@posix_shell@
# 
#  Cancel job running in LoadLeveler.
#

progname=`basename $0`
echo "----- starting $progname -----" 1>&2

joboption_lrms=ll

# ARC1 passes first the config file.
if [ "$1" = "--config" ]; then shift; ARC_CONFIG=$1; shift; fi

basedir=`dirname $0`
basedir=`cd $basedir > /dev/null && pwd` || exit $?

pkglibdir="$basedir/@pkglibdir_rel_to_pkglibexecdir@"
pkglibdir=`cd $pkglibdir > /dev/null && pwd` || exit $?

. ${pkglibdir}/cancel_common.sh $1 || exit $?

LL_DEL='llcancel'
if [ ! -z "$LL_BIN_PATH" ] ; then
  LL_DEL="${LL_BIN_PATH}/${LL_DEL}"
fi

echo executing job removal with job id $joboption_jobid 1>&2
"${LL_DEL}" "${joboption_jobid}"

echo "----- exiting $progname -----" 1>&2
echo "" 1>&2
exit 0


