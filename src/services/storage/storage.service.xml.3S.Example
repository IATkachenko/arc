<?xml version="1.0"?>
<ArcConfig 
  xmlns="http://www.nordugrid.org/schemas/ArcConfig/2007"
  xmlns:tcp="http://www.nordugrid.org/schemas/ArcMCCTCP/2007"
>
    <Server>
        <Foreground/>
        <Pidfile>./arched.pid</Pidfile>
        <Logger level="ERROR">./logfile</Logger>
    </Server>
    <ModuleManager>
        <Path>./arc1/src/services/wrappers/python/.libs/</Path>
        <Path>./arc1/src/hed/mcc/http/.libs/</Path>
        <Path>./arc1/src/hed/mcc/soap/.libs/</Path>
        <Path>./arc1/src/hed/mcc/tcp/.libs/</Path>
        <Path>./arc1/src/hed/mcc/tls/.libs/</Path>
    </ModuleManager>
    <Plugins><Name>mcctcp</Name></Plugins>
    <Plugins><Name>mcctls</Name></Plugins>
    <Plugins><Name>mcchttp</Name></Plugins>
    <Plugins><Name>mccsoap</Name></Plugins>
    <Chain>
        <Component name="tcp.service" id="tcp">
            <next id="http"/> 
            <tcp:Listen><tcp:Port>60000</tcp:Port></tcp:Listen>
        </Component>
        <Component name="http.service" id="http">
            <next id="soap">POST</next>
        </Component>
        <Component name="soap.service" id="soap">
            <next id="plexer"/>
        </Component>
        <Plexer name="plexer.service" id="plexer">
            <next id="hash">^/AHash$</next>
            <next id="librarian">^/Librarian$</next>
            <next id="bartender">^/Bartender$</next>
            <next id="element1">^/Shepherd1$</next>
            <next id="byteio1">^/byteio1$</next>
            <next id="byteio1">^/byteio1/</next>
            <next id="element2">^/Shepherd2$</next>
            <next id="byteio2">^/byteio2$</next>
            <next id="byteio2">^/byteio2/</next>
            <next id="element3">^/Shepherd3$</next>
            <next id="byteio3">^/byteio3$</next>
            <next id="byteio3">^/byteio3/</next>
        </Plexer>
        <Service name="pythonservice" id="hash">
            <ClassName>storage.hash.hash.AHashService</ClassName>
            <AHashClass>storage.hash.hash.CentralAHash</AHashClass>
            <StoreClass>storage.common.PickleStore</StoreClass>
            <StoreCfg><DataDir>./hash_data</DataDir></StoreCfg>
        </Service>
        <Service name="pythonservice" id="librarian">
            <ClassName>storage.librarian.librarian.LibrarianService</ClassName>
            <AHashURL>http://localhost:60000/AHash</AHashURL>
            <HeartbeatTimeout>30</HeartbeatTimeout>
            <CheckPeriod>20</CheckPeriod>
        </Service>
        <Service name="pythonservice" id="bartender">
            <ClassName>storage.bartender.bartender.BartenderService</ClassName>
            <LibrarianURL>http://localhost:60000/Librarian</LibrarianURL>
        </Service>
         <Service name="pythonservice" id="element1">
            <ClassName>storage.element.element.ShepherdService</ClassName>
            <ServiceID>http://localhost:60000/Shepherd1</ServiceID>
            <CheckPeriod>20</CheckPeriod>
            <MinCheckInterval>0.1</MinCheckInterval>
            <StoreClass>storage.common.PickleStore</StoreClass>
            <StoreCfg><DataDir>./element_data1</DataDir></StoreCfg>
            <BackendClass>storage.element.byteio.ByteIOBackend</BackendClass>
            <BackendCfg>
                <StoreDir>./element_store1</StoreDir>
                <TransferDir>./element_transfer1</TransferDir>
                <TURLPrefix>http://localhost:60000/byteio1/</TURLPrefix>
            </BackendCfg>
            <LibrarianURL>http://localhost:60000/Librarian</LibrarianURL>
            <BartenderURL>http://localhost:60000/Bartender</BartenderURL>
        </Service>
        <Service name="pythonservice" id="element2">
            <ClassName>storage.element.element.ShepherdService</ClassName>
            <ServiceID>http://localhost:60000/Shepherd2</ServiceID>
            <CheckPeriod>20</CheckPeriod>
            <MinCheckInterval>0.1</MinCheckInterval>
            <StoreClass>storage.common.PickleStore</StoreClass>
            <StoreCfg><DataDir>./element_data2</DataDir></StoreCfg>
            <BackendClass>storage.element.byteio.ByteIOBackend</BackendClass>
            <BackendCfg>
                <StoreDir>./element_store2</StoreDir>
                <TransferDir>./element_transfer2</TransferDir>
                <TURLPrefix>http://localhost:60000/byteio2/</TURLPrefix>
            </BackendCfg>
            <LibrarianURL>http://localhost:60000/Librarian</LibrarianURL>
            <BartenderURL>http://localhost:60000/Bartender</BartenderURL>
        </Service>
        <Service name="pythonservice" id="element3">
            <ClassName>storage.element.element.ShepherdService</ClassName>
            <ServiceID>http://localhost:60000/Shepherd3</ServiceID>
            <CheckPeriod>20</CheckPeriod>
            <MinCheckInterval>0.1</MinCheckInterval>
            <StoreClass>storage.common.PickleStore</StoreClass>
            <StoreCfg><DataDir>./element_data3</DataDir></StoreCfg>
            <BackendClass>storage.element.byteio.ByteIOBackend</BackendClass>
            <BackendCfg>
                <StoreDir>./element_store3</StoreDir>
                <TransferDir>./element_transfer3</TransferDir>
                <TURLPrefix>http://localhost:60000/byteio3/</TURLPrefix>
            </BackendCfg>
            <LibrarianURL>http://localhost:60000/Librarian</LibrarianURL>
            <BartenderURL>http://localhost:60000/Bartender</BartenderURL>
        </Service>
         <Service name="pythonservice" id="byteio1">
            <ClassName>storage.element.byteio.ByteIOService</ClassName>
            <TransferDir>./element_transfer1</TransferDir>
            <NotifyURL>http://localhost:60000/Shepherd1</NotifyURL>
        </Service>
         <Service name="pythonservice" id="byteio2">
            <ClassName>storage.element.byteio.ByteIOService</ClassName>
            <TransferDir>./element_transfer2</TransferDir>
            <NotifyURL>http://localhost:60000/Shepherd2</NotifyURL>
        </Service>
         <Service name="pythonservice" id="byteio3">
            <ClassName>storage.element.byteio.ByteIOService</ClassName>
            <TransferDir>./element_transfer3</TransferDir>
            <NotifyURL>http://localhost:60000/Shepherd3</NotifyURL>
        </Service>

    </Chain>
</ArcConfig>
