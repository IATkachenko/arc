<?xml version="1.0"?>
<ArcConfig
  xmlns="http://www.nordugrid.org/schemas/ArcConfig/2007"
  xmlns:tcp="http://www.nordugrid.org/schemas/ArcMCCTCP/2007"
  xmlns:sched="http://www.nordugrid.org/schemas/sched"
  xmlns:arccli="http://www.nordugrid.org/schemas/arccli"
>
  <Server>
    <Foreground/>
    <Pidfile>./arched.pid</Pidfile>
    <Logger level="DEBUG">./logfile</Logger>
  </Server>
  <ModuleManager>
        <Path>.libs/</Path>
        <Path>../../hed/mcc/http/.libs/</Path>
        <Path>../../hed/mcc/tls/.libs/</Path>
        <Path>../../hed/mcc/soap/.libs/</Path>
        <Path>../../hed/mcc/tcp/.libs/</Path>
  </ModuleManager>
  <Plugins><Name>mcctcp</Name></Plugins>
  <Plugins><Name>mcctls</Name></Plugins>
  <Plugins><Name>mcchttp</Name></Plugins>
  <Plugins><Name>mccsoap</Name></Plugins>
  <Plugins><Name>grid_sched</Name></Plugins>
  <Chain>
    <Component name="tcp.service" id="tcp">
      <next id="http"/>
      <tcp:Listen><tcp:Port>60000</tcp:Port></tcp:Listen>
    </Component>
 <!--  <Component name="tls.service" id="tls">
      <next id="http"/>
      <KeyPath>../../tests/echo/key.pem</KeyPath>
      <CertificatePath>../../tests/echo/cert.pem</CertificatePath>
      <CACertificatePath>../../tests/echo/ca.pem</CACertificatePath>
    </Component>  -->
    <Component name="http.service" id="http">
      <next id="soap">POST</next>
      <next id="plexer">GET</next>
    </Component>
    <Component name="soap.service" id="soap">
      <next id="plexer"/>
    </Component>
    <Plexer name="plexer.service" id="plexer">
      <next id="grid_sched">/sched</next>
    </Plexer>
    <Service name="grid_sched" id="grid_sched">
       <sched:Endpoint>http://10.211.55.9:60000/sched</sched:Endpoint>
       <sched:DataDirectoryPath>./db</sched:DataDirectoryPath>
       <sched:SchedulingPeriod>30</sched:SchedulingPeriod>
       <sched:LifetimeAfterDone>120</sched:LifetimeAfterDone>
       <sched:ReschedulePeriod>33</sched:ReschedulePeriod>
       <sched:RescheduleWaitTime>120</sched:RescheduleWaitTime>
       <sched:Timeout>5</sched:Timeout> 
       <arccli:CertificatePath>../../tests/echo/cert.pem</arccli:CertificatePath>
       <arccli:PrivateKey>../../tests/echo/key.pem</arccli:PrivateKey>
       <arccli:CACertificatePath>../../tests/echo/ca.pem</arccli:CACertificatePath>
    </Service>
  </Chain>
</ArcConfig>

