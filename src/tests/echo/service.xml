<?xml version="1.0"?>
<ArcConfig 
  xmlns="http://www.nordugrid.org/schemas/ArcConfig/2007"
  xmlns:tcp="http://www.nordugrid.org/schemas/ArcMCCTCP/2007"
  xmlns:echo="urn:echo_config"
>
    <Plugins><Name>mcctcp</Name></Plugins>
    <Plugins><Name>mcchttp</Name></Plugins>
    <Plugins><Name>mccsoap</Name></Plugins>
    <Chain>
        <Component name="tcp" id="tcp">
            <next id="http"/>
            <tcp:port>60000</tcp:port>
        </Component>
        <Component name="http" id="http">
            <next id="soap">POST</next>
        </Component>
        <Component name="soap" id="soap">
            <next id="echo"/>
        </Component>
        <Service name="echo" id="echo">
            <echo:prefix>Hello.</echo:prefix>
	    <echo:suffix>Bye.</echo:suffix>
        </Service>
    </Chain>
</ArcConfig>
