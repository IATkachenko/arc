<ArcConfig
  xmlns="http://www.nordugrid.org/schemas/ArcConfig/2007"
  xmlns:tcp="http://www.nordugrid.org/schemas/ArcMCCTCP/2007">
  <ModuleManager>
    <!--Path>/mn/tid/epf-a1/weizhonq/susy_backup/new-arc-install/lib/arc/</Path-->
    <Path>/usr/local/lib/arc/</Path>
  </ModuleManager>
  <Plugins><Name>mcctcp</Name></Plugins>
  <Plugins><Name>mcctls</Name></Plugins>
  <Plugins><Name>mcchttp</Name></Plugins>
  <Plugins><Name>mccsoap</Name></Plugins>
  <Plugins><Name>arcpdc</Name></Plugins>
  <Chain>
    <Component name='tcp.client' id='tcp'>
      <tcp:Connect>
        <tcp:Host>127.0.0.1</tcp:Host>
        <tcp:Port>60000</tcp:Port>
      </tcp:Connect>
    </Component>
    <Component name='tls.client' id='tls'>
      <next id='tcp'/>
      <KeyPath>../../tests/echo/key.pem</KeyPath>
      <CertificatePath>../../tests/echo/cert.pem</CertificatePath>
      <CACertificatePath>../../tests/echo/ca.pem</CACertificatePath>
    </Component>
    <Component name='http.client' id='http'>
      <next id='tls'/>
      <Method>POST</Method>
      <Endpoint>/Echo</Endpoint>
    </Component>
    <Component name='soap.client' id='soap' entry='soap'>
      <next id='http'/>
      <SecHandler name="usernametoken.handler" id="usernametoken" event="outgoing">
        <Process>generate</Process>
        <PasswordEncoding>digest</PasswordEncoding>
        <Username>user</Username>
        <Password>passwd</Password>
      </SecHandler>
    </Component>
  </Chain>
</ArcConfig>

