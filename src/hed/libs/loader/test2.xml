        <ServiceModule name="echo">
            <Config1>Value2</Config1>
        </ServiceModule>
        <ServiceModule name="echo2">
            <Config2>Value3</Config2>
        </ServiceModule>
    </Services>
    <Communication>
        <MessageChainComponent name="tcp">
            <Config1>Value1</Config1>
        </MessageChainComponent>
        <MessageChainComponent name="http"/>
        <MessageChainComponent name="soap"/>
        <MessageChain name="normalChain">
            <Component name="none">
                <Next name="default">tcp</Next>
            </Component>
            <Component name="tcp">
                <Next name="default">http</Next>
            </Component>
            <Component name="http">
                <Next name="POST">soap</Next>
                <Next name="default">plexer</Next>
            </Component>
        </MessageChain>
    </Communication>
    <Plexer>
        <Chain name="normalChain">
            <EndPointReference>
                <ServiceModule>echo</ServiceModule>
                <URL>echo</URL>
            </EndPointReference>
            <EndPointReference>
                <ServiceModule>echo2</ServiceModule>
                <URL>echob</URL>
            </EndPointReference>
        </Chain>
    </Plexer>
</ArcConfig>
