<ArcConfig
  xmlns="http://www.nordugrid.org/schemas/ArcConfig/2007"
  xmlns:tcp="http://www.nordugrid.org/schemas/ArcMCCTCP/2007"
  xmlns:isis="http://www.nordugrid.org/schemas/isis/2008/08"
  xmlns:pdp="http://www.nordugrid.org/schemas/pdp/Config"
  xmlns:infosys="http://www.nordugrid.org/schemas/InfoRegisterConfig/2008"
>
    <Server>
        <Pidfile>/var/run/isis_arched.pid</Pidfile>
        <Logger level="DEBUG">/tmp/isis.log</Logger>
    </Server>
    <ModuleManager>
        <Path>@libdir@/@PACKAGE@</Path>
    </ModuleManager>
    <InfoRegistrar id="ExampleCloud1">
    <!-- Contact and behavior details of the InfoRegsitrar element-->
        <URL>http://localhost:50000/isis1</URL>
        <Retry>4</Retry>
    </InfoRegistrar>
  <Plugins><Name>mcctcp</Name></Plugins>
  <Plugins><Name>isis</Name></Plugins>
  <Plugins><Name>mcchttp</Name></Plugins>
  <Plugins><Name>mccsoap</Name></Plugins>
  <Plugins><Name>arcshc</Name></Plugins>
   <Chain>
    <Component name="tcp.service" id="tcp">
      <next id="http"/>
      <tcp:Listen>
        <tcp:Port>50000</tcp:Port>
        <tcp:Version>4</tcp:Version>
      </tcp:Listen>
    </Component>
    <Component name="http.service" id="http">
      <next id="soap">POST</next>
      <next id="plexer">GET</next>
      <next id="plexer">PUT</next>
    </Component>
    <Component name="soap.service" id="soap">
        <next id="plexer"/>
    </Component>
    <Plexer name="plexer.service" id="plexer">
      <next id="isis1">^/isis1$</next>
    </Plexer>
    <Service name="isis" id="isis1">
        <DBPath>/tmp/isis1</DBPath>
        <infosys:serviceid>http://localhost:50000/isis1</infosys:serviceid>
        <infosys:endpoint>http://localhost:50000/isis1</infosys:endpoint>
        <infosys:expiration>PT3M</infosys:expiration>
        <InfoProvider>
           <URL>http://localhost:50000/isis1</URL>
        </InfoProvider>
        <InfoProvider>
           <URL>http://example1.isis.org:50000/isis1</URL>
        </InfoProvider>
        <InfoProvider>
           <URL>http://example1.isis.org:50000/isis1</URL>
        </InfoProvider>
	<infosys:InfoRegister>
                <infosys:Period>PT75S</infosys:Period>
                <infosys:Endpoint>http://localhost:50000/isis1</infosys:Endpoint>
                <infosys:Expiration>PT1M</infosys:Expiration>
                <infosys:Registrar id="ExampleCloud1"></infosys:Registrar>
        </infosys:InfoRegister>

    </Service>
  </Chain>
</ArcConfig>








