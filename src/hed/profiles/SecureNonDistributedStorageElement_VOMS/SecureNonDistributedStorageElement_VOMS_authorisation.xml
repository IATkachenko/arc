<?xml version="1.0"?>
<ArcConfig
  xmlns="http://www.nordugrid.org/schemas/ArcConfig/2007"
  xmlns:tcp="http://www.nordugrid.org/schemas/ArcMCCTCP/2007"
  xmlns:pdp="http://www.nordugrid.org/schemas/pdp/Config"
  xmlns:tls="http://www.nordugrid.org/schemas/ArcMCCTLS/2007"
  xmlns:infosys="http://www.nordugrid.org/schemas/InfoRegisterConfig/2008">
	<Server>
		<Pidfile>/tmp/storage_arched.pid</Pidfile>
		<Logger level="VERBOSE">/tmp/storage.log</Logger>
	</Server>
	<ModuleManager>
		<Path>/usr/local/lib/arc</Path>
	</ModuleManager>
	<InfoRegistrar id="NorduGridInfosys">
    	    <URL>https://example.isis.org:50000/isis</URL>
    	    <Retry>4</Retry>
            <KeyPath>/etc/grid-security/hostkey.pem</KeyPath>
	    <CertificatePath>/etc/grid-security/hostcert.pem</CertificatePath>
    	    <CACertificatesDir>/etc/grid-security/certificates</CACertificatesDir>
	</InfoRegistrar>
	<Plugins><Name>mcctcp</Name></Plugins>
	<Plugins><Name>mcctls</Name></Plugins>
	<Plugins><Name>mcchttp</Name></Plugins>
	<Plugins><Name>mccsoap</Name></Plugins>
	<Plugins><Name>arcshc</Name></Plugins>
	<Chain>
		<Component name="tcp.service" id="tcp">
			<next id="tls"/>
			<tcp:Listen>
				<tcp:Port>60000</tcp:Port>
				<tcp:Version>4</tcp:Version>
			</tcp:Listen>
		</Component>
	        <Component name="tls.service" id="tls">
    		    <next id="http"/>
    		    <tls:KeyPath>/etc/grid-security/hostkey.pem</tls:KeyPath>
    		    <tls:CertificatePath>/etc/grid-security/hostcert.pem</tls:CertificatePath>
    		    <tls:CACertificatesDir>/etc/grid-security/certificates</tls:CACertificatesDir>
    		    <tls:VOMSCertTrustDNChain>
    			<tls:VOMSCertTrustDN>/O=Grid/O=NorduGrid/CN=host/arthur.hep.lu.se</tls:VOMSCertTrustDN>
    			<tls:VOMSCertTrustDN>/O=Grid/O=NorduGrid/CN=NorduGrid Certification Authority</tls:VOMSCertTrustDN>
    		    </tls:VOMSCertTrustDNChain>
    		    <SecHandler name="arc.authz" id="authz" event="incoming">
    			<PDP name="arc.pdp">
        		    <PolicyStore>
            			<Location type="file">voms_policy.xml</Location>
        		    </PolicyStore>
    			</PDP>
    		    </SecHandler>
		</Component>
		<Component name="http.service" id="http">
			<next id="soap">POST</next>
			<next id="plexer">GET</next>
			<next id="plexer">PUT</next>
		</Component>
		<Component name="soap.service" id="soap">
			<next id="plexer"/>
		</Component>
		<Plexer name="plexer.service" id="plexer">
			<next id="ahash">^/AHash$</next>
			<next id="librarian">^/Librarian$</next>
			<next id="bartender">^/Bartender$</next>
			<next id="shepherd">^/Shepherd$</next>
			<next id="httpd">^/httpd/</next>
		</Plexer>
		<Service name="pythonservice" id="ahash">
			<ClassName>storage.ahash.ahash.AHashService</ClassName>
			<LogLevel>ERROR</LogLevel>
			<AHashClass>storage.ahash.ahash.CentralAHash</AHashClass>
			<StoreClass>arcom.store.picklestore.PickleStore</StoreClass>
			<StoreCfg>
				<DataDir>/tmp/ahash_data</DataDir>
			</StoreCfg>
    			<infosys:InfoRegister>
	        	    <infosys:Period>PT75S</infosys:Period>
    			    <infosys:Endpoint>https://localhost:60000/AHash</infosys:Endpoint>
	        	    <infosys:Expiration>PT1M</infosys:Expiration>
        		    <infosys:Registrar id="NorduGridInfosys"></infosys:Registrar>
    			</infosys:InfoRegister>
	                <ClientSSLConfig FromFile="clientsslconfig.xml" />
		</Service>
		<Service name="pythonservice" id="librarian">
			<ClassName>storage.librarian.librarian.LibrarianService</ClassName>
			<LogLevel>ERROR</LogLevel>
			<AHashURL>https://localhost:60000/AHash</AHashURL>
			<HeartbeatTimeout>30</HeartbeatTimeout>
			<CheckPeriod>20</CheckPeriod>
    			<infosys:InfoRegister>
	        	    <infosys:Period>PT75S</infosys:Period>
    			    <infosys:Endpoint>https://localhost:60000/Librarian</infosys:Endpoint>
	        	    <infosys:Expiration>PT1M</infosys:Expiration>
        		    <infosys:Registrar id="NorduGridInfosys"></infosys:Registrar>
    			</infosys:InfoRegister>
	                <ClientSSLConfig FromFile="clientsslconfig.xml" />
		</Service>
		<Service name="pythonservice" id="bartender">
			<ClassName>storage.bartender.bartender.BartenderService</ClassName>
			<LogLevel>VERBOSE</LogLevel>
			<LibrarianURL>https://localhost:60000/Librarian</LibrarianURL>
    			<infosys:InfoRegister>
	        	    <infosys:Period>PT75S</infosys:Period>
    			    <infosys:Endpoint>https://localhost:60000/Bartender</infosys:Endpoint>
	        	    <infosys:Expiration>PT1M</infosys:Expiration>
        		    <infosys:Registrar id="NorduGridInfosys"></infosys:Registrar>
    			</infosys:InfoRegister>
	                <ClientSSLConfig FromFile="clientsslconfig.xml" />
		</Service>
		<Service name="pythonservice" id="shepherd">
			<ClassName>storage.shepherd.shepherd.ShepherdService</ClassName>
			<LogLevel>VERBOSE</LogLevel>
			<ServiceID>https://localhost:60000/Shepherd</ServiceID>
			<CheckPeriod>5</CheckPeriod>
			<MinCheckInterval>0.1</MinCheckInterval>
			<StoreClass>arcom.store.picklestore.PickleStore</StoreClass>
			<StoreCfg>
				<DataDir>/tmp/shepherd_data</DataDir>
			</StoreCfg>
			<BackendClass>storage.shepherd.hardlinkingbackend.HopiBackend</BackendClass>
			<BackendCfg>
				<DataDir>/tmp/shepherd_store</DataDir>
				<TransferDir>/tmp/shepherd_transfer</TransferDir>
				<TURLPrefix>https://localhost:60000/httpd/</TURLPrefix>
			</BackendCfg>
			<LibrarianURL>https://localhost:60000/Librarian</LibrarianURL>
			<BartenderURL>https://localhost:60000/Bartender</BartenderURL>
			<LogLevel>VERBOSE</LogLevel>
    			<infosys:InfoRegister>
	        	    <infosys:Period>PT75S</infosys:Period>
    			    <infosys:Endpoint>https://localhost:60000/Shepherd</infosys:Endpoint>
	        	    <infosys:Expiration>PT1M</infosys:Expiration>
        		    <infosys:Registrar id="NorduGridInfosys"></infosys:Registrar>
    			</infosys:InfoRegister>
	                <ClientSSLConfig FromFile="clientsslconfig.xml" />
		</Service>
		<Service name="hopi" id="httpd">
			<DocumentRoot>/tmp/shepherd_transfer</DocumentRoot>
			<SlaveMode>1</SlaveMode>
    			<infosys:InfoRegister>
	        	    <infosys:Period>PT75S</infosys:Period>
    			    <infosys:Endpoint>https://localhost:60000/httpd</infosys:Endpoint>
	        	    <infosys:Expiration>PT1M</infosys:Expiration>
        		    <infosys:Registrar id="NorduGridInfosys"></infosys:Registrar>
    			</infosys:InfoRegister>
	                <ClientSSLConfig FromFile="clientsslconfig.xml" />
		</Service>
	</Chain>
</ArcConfig>




