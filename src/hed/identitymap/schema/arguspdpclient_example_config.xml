<Service name="servicename" id="serviceid">
      <SecHandler name="arguspdpclient.map" id="map" event="incoming">
            <!--PDPD>http://localhost.localdomain:8152/authz</PDPD--> 
            <PDPD>https://emitestbed30.cnaf.infn.it:8152/authz</PDPD>
            <Conversion>emi</Conversion>
            <AcceptNotApplicable>false</AcceptNotApplicable>
            <!--KeyPath and CertificatePath are only needed when url is with https-->
            <KeyPath>/location/to/key.pem</KeyPath>
            <CertificatePath>/location/to/cert.pem</CertificatePath>
            <CACertificatesDir>/etc/grid-security/certificates/</CACertificatesDir>
      </SecHandler>
 </Service>
