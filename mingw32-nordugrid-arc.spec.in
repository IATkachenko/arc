%prep
%setup -q -n nordugrid-arc-%{version}

%build
%{_mingw32_configure} \
  --disable-java \
  --disable-doc \
  --disable-ws-monitor \
  --disable-ldap-monitor \
  --disable-acix \
  --disable-static LDFLAGS="-Wl,--enable-auto-import"

make %{?_smp_mflags}

#make check

%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT
find $RPM_BUILD_ROOT -type f -name \*.la -exec rm -fv '{}' ';'
