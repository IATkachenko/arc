%doc doc/tech_doc/sec/arc-security-documentation.pdf
%doc doc/tech_doc/gridftpd/gridftpd.pdf
%doc doc/tech_doc/xrsl/xrsl.pdf
%doc doc/tech_doc/urlogger/urlogger.pdf
%doc doc/tech_doc/ldap-arc-infosys/arc_infosys.pdf
%doc doc/manuals/user_interface/ui.pdf
%doc doc/manuals/ws-quick-guide/ws-quick-guide.pdf
%doc doc/manuals/janitor/Janitor.pdf
%doc doc/manuals/monitor/monitor.pdf
