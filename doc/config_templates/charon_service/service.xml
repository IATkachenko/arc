
    <!--Other plugin names-->
    <Plugins><Name>charon</Name></Plugins>

    <Chain>

        <!--Other message components-->

        <Plexer name="plexer.service" id="plexer">
            <next id="charon_service">^/Charon$</next>
            <next id="echo">^/Echo$</next>
        </Plexer>


        <!--Configuration for the charon service, which acts
        as a remote PDP (policy decision point) -->
        <Service name="charon" id="charon_service">
            <!--The element Evaluator, Policy and Request configuration
            are supposed to be used to load object; 
            element PolicyStore is to be used to get the policy, and
            multiple location can be specified-->
            <charon:PDPConfig>
                <charon:PolicyStore>
                  <charon:Location Type="file">/path/to/charon_policy.xml</charon:Location>
                  <!-- Other policy location-->
                </charon:PolicyStore>
                <charon:Evaluator name="arc.evaluator" />
                <charon:Policy name="arc.policy" />
                <charon:Request name="arc.request" />
            </charon:PDPConfig>
        </Service>

    </Chain>

